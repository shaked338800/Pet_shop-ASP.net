@model IEnumerable<PetStrore.Models.Animal>
@{
    ViewBag.Title = "EditAnimalPage";
}
@await Html.PartialAsync("_PartialAdminView")
<form action="/Admin/EditAnimalPage" method="get">
    <h4>Category:</h4>
    <select id="category" name="category">
        <option value="">All</option>
        @foreach (var c in @ViewBag.Categories)
        {
            <option value="@c.Name">@c.Name</option>
        }
    </select>
      <input type="hidden" value="true" name="admin"/>
    <p><input type="submit" value="Search" /></p>
</form>
<div class="album py-5 bg-transparent">
    <div class="container">
        <div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 g-3">
            @foreach (var animal in Model)
            {
                <div class="col">
                    <div class="card shadow-sm">
                        <svg class="bd-placeholder-img card-img-top" width="100%" height="225" xmlns="http://www.w3.org/2000/svg" role="img" aria-label="Placeholder: Thumbnail" preserveAspectRatio="xMidYMid slice" focusable="false" style="background-image:url(@animal.ImageUrl);background-size:cover">
                            <title>@animal.Name</title>
                            <center><b><text dy=".3em">@animal.Name</text></b></center>
                        </svg>

                        <div class="card-body">
                            <p class="card-text">@animal.Description</p>
                            <div class="d-flex justify-content-between align-items-center">
                                <div class="btn-group">
                                    <a asp-action="EditAnimal" asp-route-animalId="@animal.AnimalId"><button class="btn btn-sm btn-outline-secondary">Edit</button></a>
                                </div>
                                <small class="text-muted">@animal.Category!.Name</small>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</div>     